{% extends 'giftletBundle::layout.html.twig' %}

{% block content %}

    {% block body -%}
        <h1>Gift</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Cost</th>
                    <td>{{ entity.cost }}</td>
                </tr>
                <tr>
                    <th>Createddate</th>
                    <td>{{ entity.createddate|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>

            <ul class="record_actions">
        <li>
            <a href="{{ path('gift') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('gift_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
    {% endblock %}
{% endblock %}
