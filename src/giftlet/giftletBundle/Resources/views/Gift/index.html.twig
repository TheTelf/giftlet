{% extends 'giftletBundle::layout.html.twig' %}

{% block content %}
    {% block body -%}
        <h1>Gift list</h1>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Cost</th>
                    <th>Createddate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('gift_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.cost }}</td>
                    <td>{% if entity.createddate %}{{ entity.createddate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('gift_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('gift_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <ul>
            <li>
                <a href="{{ path('gift_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    {% endblock %}
{% endblock %}